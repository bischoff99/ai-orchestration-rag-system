{
  // Workspace settings: prefer English for CodeGeeX and editor localization
  "locale": "en",

  // CodeGeeX extension - specific settings found from documentation
  "Codegeex.Explanation:Language Preference": "English",
  "Codegeex.Language": "en",
  "Codegeex.Locale": "en-US",
  "Codegeex.UILanguage": "en",
  "Codegeex.PreferredLanguage": "en",

  // Additional settings that might control code generation language
  "Codegeex.CodeGeneration.Language": "en",
  "Codegeex.Translation.Enabled": false,
  "Codegeex.Translation.TargetLanguage": "en",

  // Generic AI assistant keys (other extensions sometimes use these)
  "ai-assistant.language": "en",
  "ai-assistant.locale": "en-US",

  // Disable automatic translation features that might change language
  "editor.autoDetectLanguage": true,
  "files.autoGuessEncoding": false,
  "Codegeex.RepoIndex": true,
  "Codegeex.CommitMessage.LanguagePreference": "English",
  "Codegeex.GenerationPreference": "automatic"
}
